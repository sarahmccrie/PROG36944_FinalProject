@model FinalProject_ERMS.ViewModels.EditUserRoleViewModel

@{
    ViewData["Title"] = "Edit User Role";
}

<h2>Edit Role for @Model.Email</h2>

<form asp-action="EditUserRole">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="SelectedRole">Select Role</label>
        <select asp-for="SelectedRole" class="form-control" asp-items="@(new SelectList(Model.AvailableRoles))">
            <option value="">-- Select Role --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ListUsers" class="btn btn-secondary">Cancel</a>
</form>
